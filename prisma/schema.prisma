// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model User {
  id          String   @id @default(cuid())
  username    String   @unique
  email       String   @unique
  avatar      String
  joinDate    String
  bio         String
  merchantName String? // ชื่อพ่อค้า
  gameName    String?  // ชื่อในเกม
  password    String?  // For mock login, optional
  role        Role     @default(USER)
  tradePosts TradePost[]
  saleListings SaleListing[]
  sessions  Session[]
  reportsMade Report[] @relation("ReportedBy")
  reportsReceived Report[] @relation("ReportedUser")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id          String   @id @default(cuid())
  name        String   @unique
  image        String
  description String
  rarity      String   // Common, Uncommon, Rare, Epic, Legendary
  type        ItemType @default(OTHER)
  averagePrice Int
  npcBuyPrice  Int?
  npcSellPrice Int?
  availability NpcAvailability @default(NOT_AVAILABLE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  prices      ItemPrice[]
  saleListings SaleListing[]
}

enum NpcAvailability {
  BUYABLE
  TRADE_ONLY
  NOT_AVAILABLE
}

enum ItemType {
  WEAPON
  MEDICINE
  ATTACHMENT
  OTHER
}

model ItemPrice {
  id        String   @id @default(cuid())
  itemId    String
  sellerId  String
  price     Int
  createdAt DateTime @default(now())

  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model TradePost {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  itemHave    String
  itemWant    String
  description String
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SaleListing {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  itemId      String
  item        Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  price       Int
  description String
  image       String?
  stock       Int      @default(1)
  status      ListingStatus @default(ACTIVE)
  tags        SaleListingTag[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tag {
  id          String   @id @default(cuid())
  name        String   @unique // e.g. "Modified"
  createdAt   DateTime @default(now())
  listings    SaleListingTag[]
}

model SaleListingTag {
  id            String   @id @default(cuid())
  listingId     String
  tagId         String
  listing       SaleListing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  tag           Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())

  @@unique([listingId, tagId])
}

enum ListingStatus {
  ACTIVE
  RESERVED
  SOLD_OUT
  INACTIVE
}

model ChatMessage {
  id        String   @id @default(cuid())
  senderId  String
  receiverId String
  message   String
  orderId   String?
  timestamp DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  sessionToken String @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  RESERVED
  AWAITING_SELLER_CONFIRM
  AWAITING_BUYER_CONFIRM
  COMPLETED
  DISPUTE
  CANCELLED
}

model Order {
  id            String      @id @default(cuid())
  listingId     String      // SaleListing ID (or mock listing ID)
  itemId        String
  sellerId      String
  buyerId       String
  price         Int
  quantity      Int         @default(1)
  status        OrderStatus @default(RESERVED)
  proofImages   String      // JSON array of proof image URLs/base64
  disputeReason String?
  adminNotes    String?
  expiresAt     DateTime?
  lastReminderAt DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model TradeHistory {
  id           String   @id @default(cuid())
  orderId      String
  buyerId      String
  sellerId     String
  itemId       String
  quantity     Int
  completedAt  DateTime @default(now())
}

enum ReportType {
  USER_REPORT
  SYSTEM_REPORT
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

model Report {
  id            String       @id @default(cuid())
  type          ReportType
  reporterId    String
  reporter      User         @relation("ReportedBy", fields: [reporterId], references: [id], onDelete: Cascade)
  reportedUserId String?     // Only for USER_REPORT
  reportedUser  User?        @relation("ReportedUser", fields: [reportedUserId], references: [id], onDelete: SetNull)
  title         String
  description   String
  status        ReportStatus @default(PENDING)
  adminNotes    String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}